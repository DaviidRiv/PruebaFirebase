@model PruebaFireBase.Models.PhoneModel

@{
    ViewData["Title"] = "CreatePhone";
}

<div class="card">
    <h5 class="card-header">New Phone</h5>

    <p class="card-text">
        <div class="col-md-12">
            <form asp-action="CreatePhone" class="row g-3" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" required />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" required />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Image" class="control-label"></label>
                    <input name="Image" type="file" class="form-control" required />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between w-100">
                    <div class="d-flex justify-content-center flex-grow-1">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </form>
            <div>
                <a type="button" asp-action="IndexPhone" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
